{
  "properties": {
    "title": "${apptitle}"
  },
  "load": {
    "bundleLocations": [
      "localbundles",
      "bundles"
    ],
    "allowedBundles": [
      "system",
      "banner",
      "basemaptoggler",
      "console",
      "notifier",
      "splashscreen",
      "templatelayout",
      "template-seasons",
      "theme-everlasting",
      "theme-winter",
      "theme-spring",
      "theme-summer",
      "theme-autumn",
      "map-init",
      "toolset",
      "sample_helloworld"
    ],
    "require": [
      "${app}.app"
    ],
    "i18n": [
      "bundle"
    ]
  },
  "bundles": {
    "banner": {
      "BannerWidget": {
        "label": "Developer Network",
        "image": "https://www.conterra.de/~/media/conterra/images/site_logos/conterra-logo.ashx",
        "imagePosition": "above",
        "link": "http://developernetwork.conterra.de"
      }
    },
    "basemaptoggler": {
      "Config": {
        "nextBasemap": "hybrid"
      }
    },
    "map-init": {
      "Config": {
        "map": {
          "layers": [
            {
              "id": "esri_group_sites",
              "title": "${map.esrisites.title}",
              "portalItem": {
                "id": "d0e2a965dd2e4f24b33495a4c2475bed"
              },
              "type": "AGS_FEATURE",
              "elevationInfo": {
                "mode": "on-the-ground"
              },
              "layerId": 0,
              "visible": true,
              "popupEnabled": true,
              "outFields": [
                "*"
              ],
              "popupTemplate": {
                "title": "{name2}",
                "content": "<div><font size=\"4\">{name3}</font></div><div><hr /></div><h2>${map.esrisites.popup.address}</h2><div><font size=\"2\">{street}<br /></font></div><div><font size=\"2\">{plz_city}</font></div><div><h2>${map.esrisites.popup.contact}</h2></div><div><font size=\"2\">${map.esrisites.popup.tel} <a href=\"tel:{tel}\">{tel}</a></font></div><div><font size=\"2\">${map.esrisites.popup.mail} <a href=\"mailto:{email}\">{email}</a></font></div><div><font size=\"2\">${map.esrisites.popup.link} <a href=\"{link}\" target=\"_blank\">{link}</a></font></div>"
              }
            }
          ],
          "basemap": "streets",
          "ground": {
            "url": "https://elevation3d.arcgis.com/arcgis/rest/services/WorldElevation3D/Terrain3D/ImageServer",
            "type": "ELEVATION"
          }
        },
        "view": {
          "viewmode": "2D",
          "extent": {
            "xmin": 600000,
            "ymin": 5800000,
            "xmax": 1700000,
            "ymax": 7600000,
            "spatialReference": 3857
          }
        }
      }
    },
    "themes": {
      "ThemeModel": {
        "_selectedTheme": "everlasting"
      },
      "ThemeSelector": {
        "componentEnabled": true
      }
    }
  }
}
